@using JheyPassword.Components.Shared.NavBar
@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider MaxWidth="MaxWidth.Medium"/>

@* Needed for snackbars *@
<MudSnackbarProvider />

<div class="page">
    <main>
        <article class="content px-4">
            <CustomErrorBoundary @ref="@ErrorBoundary">
                @Body
            </CustomErrorBoundary>

            <NavBar />
        </article>
    </main>
</div>

@code {

    protected ErrorBoundary? ErrorBoundary;

    protected override void OnParametersSet()
    {
        ErrorBoundary?.Recover();
    }

}